<h1 class="mb-1 restaurant-show-title">{{ restaurants.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mb-3 mx-auto">
      <a href="/{{ restaurants._id }}/edit" class="btn btn-outline-primary pt-0 pb-0">
        <i class="fas fa-edit"></i> Edit
      </a>
      <form action="/{{ restaurants._id }}?_method=DELETE" method="POST" style="display: inline;"
        onsubmit="return confirm('Do you really want to delete this restaurant?');">
        <button class="btn btn-outline-danger pt-0 pb-0" type="submit"><i class="far fa-trash-alt"></i> Delete </button>
      </form>
      <a class="btn btn-outline-secondary pt-0 pb-0" href="/">back</a>
    </div>
  </div>
</div>